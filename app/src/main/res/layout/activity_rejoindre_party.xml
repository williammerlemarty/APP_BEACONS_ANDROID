<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rejoindre_party"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_activity"
    tools:context="com.example.williammerle.workshop2.RejoindrePartyActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rejoindre une partie"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Mot de passe"
        android:ems="10"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_marginTop="56dp"
        android:id="@+id/password"
        android:background="#000000"
        android:padding="@dimen/activity_horizontal_margin"
        android:textStyle="normal|bold"
        android:textColor="#ffff25" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Nom de la partie"
        android:ems="10"
        android:layout_marginTop="59dp"
        android:id="@+id/name"
        android:background="#000000"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/activity_horizontal_margin"
        android:textStyle="normal|bold"
        android:textColor="#ffff25" />

    <Button
        android:layout_width="125dp"
        android:layout_height="25dp"
        android:layout_marginTop="57dp"
        android:id="@+id/join"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rejoindre" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_marginTop="17dp"
        android:id="@+id/errorname"
        android:textColor="#FF0000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/errorpassword"
        android:layout_below="@+id/password"
        android:layout_alignStart="@+id/password"
        android:textColor="#FF0000" />
</RelativeLayout>
