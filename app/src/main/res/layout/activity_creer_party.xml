<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_creer_party"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_activity"
    tools:context="com.example.williammerle.workshop2.CreerPartyActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CrÃ©er une partie"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Nom de la partie"
        android:ems="10"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="40dp"
        android:id="@+id/name"
        android:background="@android:color/background_dark"
        android:padding="@dimen/activity_horizontal_margin"
        android:textColor="#ffff25"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_marginTop="41dp"
        android:id="@+id/number"
        android:background="@android:color/background_dark"
        android:hint="Nb de joueurs (2 ou 3)"
        android:padding="@dimen/activity_horizontal_margin"
        android:textStyle="normal|bold"
        android:textColor="#ffff25" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/number"
        android:layout_marginTop="12dp"
        android:id="@+id/errorname"
        android:textColor="#FF0000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/errornumber"
        android:layout_below="@+id/number"
        android:layout_alignStart="@+id/time"
        android:textColor="#FF0000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_alignStart="@+id/time"
        android:layout_marginTop="13dp"
        android:id="@+id/errortime"
        android:textColor="#FF0000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:id="@+id/time"
        android:hint="Temps de jeu (min)"
        android:background="#000000"
        android:layout_below="@+id/errornumber"
        android:layout_alignStart="@+id/number"
        android:padding="@dimen/activity_horizontal_margin"
        android:textColor="#ffff25"
        android:textStyle="normal|bold" />

    <Button
        android:layout_marginTop="40dp"
        android:id="@+id/next"
        android:background="@drawable/continuer"
        android:layout_width="125dp"
        android:layout_height="25dp"
        android:layout_below="@+id/mdp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/mdp"
        android:hint="Mot de passe"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_marginTop="15dp"
        android:textColor="#ffff25"
        android:layout_below="@+id/errortime"
        android:layout_alignStart="@+id/errortime" />
</RelativeLayout>
